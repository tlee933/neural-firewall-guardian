{
  "dashboard": {
    "title": "AI Suricata - Threat Detection & Response",
    "tags": ["security", "suricata", "ids", "ai"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "suricata_ai_uptime_seconds",
            "legendFormat": "Uptime (seconds)",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "none"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 60, "color": "yellow"},
                {"value": 300, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Total Alerts Processed",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "suricata_ai_alerts_total",
            "legendFormat": "Total Alerts",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 1000, "color": "green"},
                {"value": 10000, "color": "orange"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Critical Threats",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "suricata_ai_critical_threats_total",
            "legendFormat": "Critical Threats",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "orange"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Blocks",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "suricata_ai_active_blocks",
            "legendFormat": "Active Blocks",
            "refId": "A"
          }
        ],
        "options": {
          "reduceOptions": {
            "values": false,
            "calcs": ["lastNotNull"]
          },
          "textMode": "value_and_name",
          "colorMode": "background",
          "graphMode": "area"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "blue"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Alert Rate (per second)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "rate(suricata_ai_alerts_total[1m])",
            "legendFormat": "Alerts/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Alerts per second"
          },
          {
            "format": "short",
            "show": false
          }
        ],
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "avg": true,
          "current": true,
          "max": true
        }
      },
      {
        "id": 6,
        "title": "Alerts by Severity",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "suricata_ai_alerts_by_severity_total",
            "legendFormat": "{{severity}}",
            "refId": "A"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "right",
            "values": ["value", "percent"]
          },
          "pieType": "pie",
          "displayLabels": ["name", "percent"]
        }
      },
      {
        "id": 7,
        "title": "Threat Metrics Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "rate(suricata_ai_alerts_by_severity_total{severity=\"CRITICAL\"}[5m])",
            "legendFormat": "CRITICAL",
            "refId": "A"
          },
          {
            "expr": "rate(suricata_ai_alerts_by_severity_total{severity=\"HIGH\"}[5m])",
            "legendFormat": "HIGH",
            "refId": "B"
          },
          {
            "expr": "rate(suricata_ai_alerts_by_severity_total{severity=\"MEDIUM\"}[5m])",
            "legendFormat": "MEDIUM",
            "refId": "C"
          },
          {
            "expr": "rate(suricata_ai_alerts_by_severity_total{severity=\"LOW\"}[5m])",
            "legendFormat": "LOW",
            "refId": "D"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Rate"
          },
          {
            "format": "short",
            "show": false
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": false,
        "legend": {
          "show": true,
          "values": true,
          "avg": true,
          "current": true
        },
        "seriesOverrides": [
          {
            "alias": "CRITICAL",
            "color": "#E02F44"
          },
          {
            "alias": "HIGH",
            "color": "#FF9830"
          },
          {
            "alias": "MEDIUM",
            "color": "#FFEE52"
          },
          {
            "alias": "LOW",
            "color": "#5794F2"
          }
        ]
      },
      {
        "id": 8,
        "title": "Top Source IPs (Alert Count)",
        "type": "bargauge",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "topk(10, suricata_ai_top_source_ips)",
            "legendFormat": "{{source_ip}}",
            "refId": "A"
          }
        ],
        "options": {
          "orientation": "horizontal",
          "displayMode": "gradient",
          "showUnfilled": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 50, "color": "yellow"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Actions Taken",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "suricata_ai_blocks_total",
            "legendFormat": "Total Blocks",
            "refId": "A"
          },
          {
            "expr": "suricata_ai_rate_limits_total",
            "legendFormat": "Rate Limits",
            "refId": "B"
          },
          {
            "expr": "suricata_ai_active_blocks",
            "legendFormat": "Active Blocks",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "smooth",
              "fillOpacity": 10
            }
          }
        },
        "options": {
          "legend": {
            "displayMode": "list",
            "placement": "bottom"
          }
        }
      },
      {
        "id": 10,
        "title": "Average Threat Score",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "suricata_ai_avg_threat_score",
            "legendFormat": "Avg Score",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "none",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.3, "color": "yellow"},
                {"value": 0.7, "color": "orange"},
                {"value": 0.85, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Processing Time",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 28},
        "targets": [
          {
            "expr": "suricata_ai_processing_time_seconds",
            "legendFormat": "Avg Processing Time",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "min": 0,
            "max": 0.01,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.001, "color": "yellow"},
                {"value": 0.005, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "title": "Alert Rate Gauge",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 28},
        "targets": [
          {
            "expr": "suricata_ai_alerts_per_second",
            "legendFormat": "Alerts/sec",
            "refId": "A"
          }
        ],
        "options": {
          "showThresholdLabels": true,
          "showThresholdMarkers": true
        },
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 10, "color": "yellow"},
                {"value": 50, "color": "orange"},
                {"value": 100, "color": "red"}
              ]
            }
          }
        }
      }
    ]
  },
  "overwrite": true
}
